# ============================================================
# Missive — Environment Variables
# Copy this file to .env.local and fill in the values.
# NEVER commit .env.local to version control.
# ============================================================

# ---- Supabase -----------------------------------------------
# From: Supabase Dashboard > Project Settings > API

# Public URL of your Supabase project (safe to expose to browser)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Anon/public key — used on the client side (safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Service role key — SERVER SIDE ONLY, bypasses RLS, keep secret
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Direct Postgres connection string for Prisma
# From: Supabase Dashboard > Project Settings > Database > Connection string (URI)
# Use the "Transaction" pooler URL for serverless (port 6543) or direct (port 5432)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-id.supabase.co:5432/postgres

# ---- Supabase Storage ----------------------------------------
# Name of the private storage bucket for letter images
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=letters-images

# ---- Upstash Redis -------------------------------------------
# From: Upstash Console > Database > REST API

UPSTASH_REDIS_REST_URL=https://your-db.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here

# ---- Vercel Cron Security ------------------------------------
# Random secret used to authenticate /api/cron/deliver calls.
# Generate with: openssl rand -hex 32
CRON_SECRET=your-random-cron-secret-here
